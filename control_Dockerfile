FROM ubuntu:22.04

# used to choose the default answers i.e. avoids prompting you yes or no
ARG DEBIAN_FRONTEND=noninteractive

# install required packages for ansible
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y \
    less \
    software-properties-common \
    python3 \
    python3-pip \
    openssh-client && \
    apt-get clean

# Create a non-root user for better security
RUN useradd -m -s /bin/bash ansible && \
usermod -aG sudo ansible

# Set the working directory1
WORKDIR /home/ansible

# Switch to the ansible user
USER ansible

# add the home directory to the path
ENV PATH="/home/ansible/.local/bin:${PATH}"

RUN python3 -m pip install --user ansible

# create ssh keys automatically (non-interactive)
RUN ssh-keygen -t ed25519 -C "control node" -f /home/ansible/.ssh/id_ed25519 -N ""

CMD ["/bin/bash"]
